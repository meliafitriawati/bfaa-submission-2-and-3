<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githubuserapi" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserApi" >
        <activity
            android:name=".view.favorite.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".view.setting.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.detail.DetailUserActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".view.main.UsersActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
    </application>

</manifest>